<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp">

    <androidx.cardview.widget.CardView
        xmlns:days_card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_day_tasks_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        days_card_view:cardBackgroundColor="@color/hoytask_card_view_light_purple"
        days_card_view:cardCornerRadius="24dp"
        days_card_view:contentPadding="18dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/items_day_tasks_constraintlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <TextView
                android:id="@+id/items_day_tasks_dayofmonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10"
                android:textSize="32sp"
                android:textStyle="bold"
                days_card_view:layout_constraintStart_toStartOf="parent"
                days_card_view:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/items_day_tasks_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="JUNE"
                days_card_view:layout_constraintStart_toEndOf="@id/items_day_tasks_dayofmonth"
                days_card_view:layout_constraintTop_toTopOf="@id/items_day_tasks_dayofmonth"
                days_card_view:layout_constraintBottom_toBottomOf="@id/items_day_tasks_dayofmonth"
                android:layout_marginStart="14dp"
                android:layout_marginTop="6dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/items_day_tasks_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2022"
                days_card_view:layout_constraintStart_toEndOf="@id/items_day_tasks_month"
                days_card_view:layout_constraintTop_toTopOf="@id/items_day_tasks_dayofmonth"
                days_card_view:layout_constraintBottom_toBottomOf="@id/items_day_tasks_dayofmonth"
                android:layout_marginStart="14dp"
                android:layout_marginTop="6dp"
                android:textSize="18sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>