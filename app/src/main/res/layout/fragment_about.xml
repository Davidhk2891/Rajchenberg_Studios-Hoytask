<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context=".ui.more.about.AboutDialogFragment">

    <TextView
        android:id="@+id/about_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/about_hoygenda"
        android:layout_margin="12dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/about_content_textview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        tools:text="Build name: 1.0\nBuild number: 1"
        app:layout_constraintTop_toBottomOf="@+id/about_title_textview"
        app:layout_constraintStart_toStartOf="@+id/about_title_textview" />

    <Button
        android:id="@+id/about_options_thanks_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thanks"
        android:textColor="@color/hoytask_purple"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginEnd="14dp"
        app:layout_constraintTop_toBottomOf="@+id/about_content_textview"
        app:layout_constraintStart_toEndOf="@+id/about_content_textview"/>

</androidx.constraintlayout.widget.ConstraintLayout>