<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hoytask_purple"
    tools:context=".ui.tutorial.TutorialFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/tutorial_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tutorial_imageview_previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/tutorial_imageview_previous"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        android:padding="6dp"
        android:layout_margin="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_weight="1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/arrow_back" />

    <LinearLayout
        android:id="@+id/tutorial_dots_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tutorial_imageview_previous"
        app:layout_constraintTop_toTopOf="@id/tutorial_imageview_previous"
        app:layout_constraintEnd_toStartOf="@+id/tutorial_imageview_forward"
        app:layout_constraintStart_toEndOf="@+id/tutorial_imageview_previous"/>

    <ImageView
        android:id="@+id/tutorial_imageview_forward"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:padding="6dp"
        android:layout_margin="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_weight="1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/arrow_forward" />

</androidx.constraintlayout.widget.ConstraintLayout>